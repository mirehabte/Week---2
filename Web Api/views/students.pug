doctype html
html
head
  title Students
  style.
    table #disp {   
    background-color: #eee;
    font-style: italic;
    font-size: 18px;   
    }
    table #dispH {    
    background-color: #eee;
    font-style: normal;    
    font-size: 20px;    
    }
    
  h2 List of Registered Students
    body
        table
            thead#dispH
                tr
                    th First Name
                    th Middle Name
                    th Last Name
                    th Date of Birth
                    th Gender
                    th Grade
            tbody#disp
                each student in students
                    tr
                        td= student.firstName
                        td= student.middleName
                        td= student.lastName
                        td= student.dateOfBirth
                        td= student.gender
                        td= student.grade







          
          

